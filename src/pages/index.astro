---
import { SITE } from '~/config.mjs';
import { Image } from 'astro:assets';
import { YouTube } from '@astro-community/astro-embed-youtube';

import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import VideoSection from '~/components/widgets/VideoSection.astro';
import PostCard from '~/components/widgets/PostCard.astro';
import blogPosts from '~/blogdata/blogposts.json';
import SignUpForm from '~/components/widgets/SignUpForm.astro';
import ComingSoon from '~/components/widgets/ComingSoon.astro';
import TopCard from '~/components/widgets/TopCard.jsx';
import LowCard from '~/components/widgets/LowCard.jsx';
import LandingDashboard from '~/components/widgets/LandingDashboard.astro';
import BgVideo from '~/components/widgets/BgVideo.jsx';

import clock from '~/assets/images/clock.svg'
import bell from '~/assets/images/bell.svg'
import safe from '~/assets/images/safe.svg'
import chart from '~/assets/images/chart.svg'

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};

---


<Layout {meta}>
  <section class="relative">
    <div class="absolute top-0 mx-auto -z-50 w-full opacity-20 hidden md:block">
      <BgVideo client:load />
    </div>
    <Hero>
      <Fragment slot="title">
        Trading is Evolving<br>And the Machines are Winning
      </Fragment>
      <Fragment slot="subtitle">
        We recognize machines are better at trade decision making than humans
      </Fragment>
    </Hero>
    <div class="w-full grid place-content-center mt-4 lg:mt-6">
      <button class="bg-[#FED136] backdrop-blur-xl border-2 border-secondary rounded-full py-2.5 px-7 mx-auto font-semibold text-textdark">Step Inside</button>
    </div>
    <LandingDashboard />
  </section>


    

  
  <section class="px-6 mx-auto max-w-6xl lg:px-8 py-20">
    <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-left pb-16 text-transparent bg-clip-text bg-gradient-to-b from-[#e4e5e7] to-[#7b7b7e]">Top 10 Growing Currencies</h2>
    <TopCard client:only></TopCard>
  </section>

  <VideoSection
    title="Get to know FinGen";
    content="Fingen, a pioneering platform, revolutionizes the landscape of crypto trading by harnessing cutting-edge Artificial Intelligence (AI). Catering to both seasoned traders and newcomers, Fingen empowers users to make informed decisions in the volatile crypto market. <br><br>By amalgamating intricate data analytics and AI-driven forecasting, Fingen enables investors to strategize effectively, minimize risks, and optimize their crypto trading experiences. With up-to-date information and predictive analytics at their disposal, users can make timely and well-informed decisions, enhancing their chances of success in the dynamic world of cryptocurrency trading.";
    link="tPZ7wjiM5yw";
  ></VideoSection>

  <SignUpForm />
  
  <ComingSoon />
<div class="w-full overflow-x-clip">
  <section class="px-6 mx-auto max-w-6xl lg:px-8 py-20 relative">
    <div class="pb-8 inline-flex justify-between w-full items-center">
      <h2 class="text-justify text-3xl md:text-4xl font-bold tracking-tight text-transparent bg-clip-text bg-gradient-to-b from-[#e4e5e7] to-[#7b7b7e]">Latest articles</h2>
      <a class="bg-gradient-to-br from-gradient to-accent px-px py-px rounded-full" href="/blog"><div class="px-6 py-2 bg-black/80 rounded-full hover:bg-black/50 transition-all">See All</div></a>
    </div>
    
    <div class="w-96 h-96 rounded-full bg-gradient blur-3xl opacity-20 absolute top-1/2 -translate-y-1/2 -left-80 scale-150 -z-10"></div>
    <div class="w-96 h-96 rounded-full bg-bluegradient blur-3xl opacity-20 absolute top-1/2 -translate-y-1/2 -right-80 scale-150 -z-10"></div>

    <div class="flex flex-col md:grid md:grid-cols-3 gap-4 md:gap-8">
      {blogPosts.slice(0,3).map((post) => (
        <PostCard
          title={post.title}
          date={post.date}
          tag={post.tag}
          image={post.image}
          url={`/blog/${post.slug}`}
        />
      ))}
    </div>
  </section>
</div>

  <section class="px-6 mx-auto max-w-6xl lg:px-8 py-20 relative">
    <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-center pb-16 text-transparent bg-clip-text bg-gradient-to-b from-[#e4e5e7] to-[#7b7b7e]">Designed for professionals<br>Accessible for everyone</h2>
    <div class="grid grid-rows-2 grid-cols-2 md:grid-rows-1 md:grid-cols-4 gap-2 md:gap-4">
      <div class="overflow-hidden relative bg-gradient-to-b from-white/5 to-white/0 rounded-lg w-full aspect-square flex justify-center items-end p-2 opacity-80 backdrop-blur-xl">
        <Image class="absolute right-5 scale-125 bottom-10"  src={chart} alt="What to buy"></Image>
        <p class="text-muted uppercase">What to buy</p>
      </div>
      <div class="overflow-hidden relative bg-gradient-to-b from-white/5 to-white/0 rounded-lg w-full aspect-square flex justify-center items-end p-2 opacity-80 backdrop-blur-xl">
        <Image class="absolute -right-8 scale-125 -bottom-8"  src={safe} alt="What to buy"></Image>
        <p class="text-muted uppercase">What to sell</p>
      </div>
      <div class="overflow-hidden relative bg-gradient-to-b from-white/5 to-white/0 rounded-lg w-full aspect-square flex justify-center items-end p-2 opacity-80 backdrop-blur-xl">
        <Image class="absolute -right-10 scale-125 -bottom-10"  src={clock} alt="What to buy"></Image>
        <p class="text-muted uppercase">When to buy</p>
      </div>
      <div class="overflow-hidden relative bg-gradient-to-b from-white/5 to-white/0 rounded-lg w-full aspect-square flex justify-center items-end p-2 opacity-80 backdrop-blur-xl">
        <Image class="absolute -right-0 scale-100 -bottom-0"  src={bell} alt="What to buy"></Image>
        <p class="text-muted uppercase">When to sell</p>
      </div>
      
    </div>
  </section>
  
  <section class="px-6 mx-auto max-w-6xl lg:px-8 py-20">
    <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-left pb-16 text-transparent bg-clip-text bg-gradient-to-b from-[#e4e5e7] to-[#7b7b7e]">Top 10 Declining Currencies</h2>
    <LowCard client:only></LowCard>
  </section>
  
  <SignUpForm />
</Layout>