---
import Layout from '~/layouts/PageLayout.astro';
import TotalObs from '~/components/widgets/TotalObs.jsx';
import DataTable from '~/components/widgets/DataTable.jsx';
import ExchangeGraph from '~/components/widgets/Exchange.jsx';
import TrendChart from '~/components/widgets/TrendChart.jsx';
import PieChart from '~/components/widgets/PieChart.jsx';

const meta = {
  title: "Test",
};
---

<Layout {meta}>
    <TotalObs></TotalObs>

    <!-- Globe placeholder -->
    <div class="w-56 h-56 rounded-full bg-accent mx-auto my-16 blur-2xl flex items-center justify-center">
        <div class="w-56 h-56 rounded-full bg-gradient-to-r from-accent to-gradient"></div>
    </div>

    <PieChart client:load></PieChart>
    <DataTable></DataTable>
    <ExchangeGraph></ExchangeGraph>

    <TrendChart client:load></TrendChart>

</Layout>
