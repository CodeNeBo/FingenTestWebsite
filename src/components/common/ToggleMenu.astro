---
import { Icon } from 'astro-icon';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
  iconName?: string;
}

const {
  label = 'Toggle Menu',
  class:
    className = 'text-textcolor hover:text-textcolor text-sm py-auto inline-flex items-center transition',
  iconClass = 'w-6 h-6',
  iconName = 'tabler:menu-2',
} = Astro.props;
---

<button type="button" class={className} aria-label={label} data-aw-toggle-menu>
  <Icon name={iconName} class={iconClass} optimize={false} />
</button>
