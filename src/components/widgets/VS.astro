---
interface Item {
  title?: string;
  pip?: string;
  description1?: string;
  description2?: string;
  description3?: string;
  description4?: string;
}
export interface Props {
  items: Array<Array<Item>>;
}
const {
  items = [],
} = Astro.props;
---

<section class="mx-auto max-w-6xl lg:px-8 py-3" id="VS">
  <div class="max-w-md lg:max-w-lg mx-auto">
    {
      items.map((subitems) => (
        <div class="max-w-md lg:max-w-lg px-7 border border-[#4B4B63] rounded-lg py-3 items-center mx-auto bg-[#0F0F18]">
            {subitems.map(({ title, pip, description1, description2, description3, description4 }) => (
                    <div class="flex flex-row items-center justify-between flex-wrap">
                        <h4 class="text-sm font-bold mr-1" set:html={title} />
                        <div class="bg-[#7346C7] px-3 rounded-full ml-2 flex flex-row items-center align-middle w-fit my-1">
                            <h4 class="text-sm font-bold">TOTAL PIP RUN:</h4>
                            <h4 class="ml-1 text-sm font-bold" set:html={pip} />
                        </div>
                    </div>
                    <div class="flex flex-row flex-wrap items-center pt-2 justify-between">
                        <p class="font-semibold text-[10px]" set:html={description1} />
                        <p class="text-[#4B4B63] mx-1 text-[10px]">//</p>
                        <p class="font-semibold text-[10px]" set:html={description2} />
                        <p class="text-[#4B4B63] mx-1 text-[10px]">//</p>
                        <p class="font-semibold text-[10px]" set:html={description3} />
                        <p class="text-[#4B4B63] mx-1 text-[10px]">//</p>
                        <p class="font-semibold text-[10px]" set:html={description4} />
                    </div>
            ))}
        </div>
      ))
    }
  </div>
</section>