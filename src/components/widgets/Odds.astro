---
interface Item {
  currency?: string;
  currency2?: string;
  value1?: string;
  value2?: string;
}
export interface Props {
  items: Array<Array<Item>>;
}
const {
  items = [],
} = Astro.props;
---

<section class="mx-auto max-w-6xl md:max-w-full mb-4" id="Odds to win">
  <div class="max-w-md md:max-w-full mx-auto md:bg-[#191931] md:rounded-lg md:p-4 md:flex md:flex-row md:justify-start md:align-middle">
    <div class="md:mx-8 md:w-40">
      <h2 class="text-2xl mb-2 text-center font-bold md:text-base ">Odds to Win</h2>
      <p class="bg-[#ED374D] rounded-full text-center px-3 mx-auto w-16 mt-1  hidden md:block">LIVE</p>
    </div>

    <div class="flex flex-row justify-between text-[#A4A4A7] text-reg px-4 pb-2 md:hidden">
        <p>FX Pair</p>
        <p>Odds Number</p>
    </div>

    <div class="h-fit mb-4 md:flex md:my-auto md:w-full">
      {
        items.map((subitems) => (
          <div class="md:flex md:flex-row md:justify-between w-full">
            {subitems.map(({ currency, currency2, value1, value2 }) => (
              <div class="hidden first:flex last:flex md:flex flex-row border border-[#1C1C24] rounded-lg py-3 items-center px-4 mb-2 bg-[#0F0F18] md:mb-0 md:bg-[#191931] ">
                  <div class="flex flex-row justify-between w-full md:gap-4">
                    <div class="flex flex-row">
                      <p class="text-lg md:text-xs" set:html={currency} />
                      <p class="text-lg mx-2 md:text-xs md:hidden"> â€¢ </p>
                      <p class="hidden text-lg mx-1 md:text-xs md:block"> / </p>
                      <p class="text-lg md:text-xs" set:html={currency2} />
                    </div>
                    <div class="flex flex-row text-lg md:text-xs">
                        <p set:html={value1} />
                        <p class="mx-2 md:mx-1">-</p>
                        <p set:html={value2} />
                    </div>
                  </div>
              </div>
            ))}
          </div>
        ))
      }
    </div>
  </div>
</section>