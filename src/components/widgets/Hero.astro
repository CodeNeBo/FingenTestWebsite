---
import { Icon } from 'astro-icon';

export interface Props {
  title?: string;
  content?: string;
  subtitle?: string;
  image?: string | any; // TODO: find HTMLElementProps
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  content = await Astro.slots.render('content'),
} = Astro.props;
---

<section class="relative h-fit overflow-x-hidden">
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="pt-9 my-24 lg:my-32 relative">
      <div class="text-center max-w-screen-lg mx-auto">
        {
          title && (
            <h1
              class="text-4xl md:text-6xl font-black leading-snug tracking-tighter pb-4 text-transparent bg-clip-text bg-gradient-to-b from-[#e4e5e7] to-[#7b7b7e]"
              set:html={title}
            />
          )
        }

        <div class="max-w-3xl mx-auto">
          {subtitle && <p class="text-xl text-muted mx-6 tracking-wide leading-snug md:mx-12 my-2 text-textcolor font-main text-nowrap" set:html={subtitle} />}
          <div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4">
          </div>
        </div>
        {content && <Fragment set:html={content} />}
      </div>
      <div class="w-full grid place-content-center mt-4 lg:mt-6">
        <button class="backdrop-blur-xl border text-textcolor border-secondary rounded-full py-2.5 pl-7 pr-4 mx-auto font-semibold inline-flex gap-4 hover:bg-secondary hover:text-textdark ease-out duration-300 font-main text-nowrap">Step Inside<Icon name={'tabler:chevron-right'} class="w-6 h-6 my-auto"/></button>
      </div>
      

      
    </div>
  </div>
</section>
