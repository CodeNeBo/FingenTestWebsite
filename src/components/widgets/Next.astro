---
import { Icon } from 'astro-icon';

interface Item {
  description?: string;
  description2?: string;
  description3?: string;
  icon?: string;
}

export interface Props {
  title?: string;
  subtitle?:string;
  title2?: string;
  subtitle2?:string;
  content?: string;
  content2?: string;
  items?: Array<Item>;
  items2?: Array<Item>;
  image?: string | any;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  title2 = await Astro.slots.render('title2'),
  subtitle2 = await Astro.slots.render('subtitle2'),
  items = [],
  items2 = [],
} = Astro.props;
---

<section class:list={['px-4 pb-[14px] sm:px-6 mx-auto lg:px-8 lg:pb-0 max-w-6xl']}>
  <div class="mx-auto max-w-7xl">
    <div class={`grid grid-cols-1 md:grid-cols-3 gap-0 md:gap-10`}>

      <div class="mb-16 lg:mb-[30px] bg-[#0B0B14] border-[#1C1C24] border rounded-xl p-8">
        {title && <h2 class="text-3xl font-bold leading-tighter tracking-tighter mb-2 font-heading mx-auto" set:html={title} />}
        {subtitle && <h3 class="mb-2 py-2 text-base font-medium" set:html={subtitle} />}
        {
          items && (
            <div class="space-y-6">
              {items.map(({ description, icon }) => (
                <div class="flex">
                  <div class="flex-shrink-0">
                    <div class="flex h-6 w-6 items-center justify-center bg-[#EC458D] rounded-full mt-2">
                      <Icon name={icon ? icon : 'tabler:check'} class="w-4 h-4" />
                    </div>
                  </div>
                  <div class="ml-4">
                    {description && <p class="mt-2 text-base font-medium text-muted" set:html={description} />}
                  </div>
                </div>
              ))}
            </div>
          )
        }
      </div>

      <div class="mb-16 lg:mb-[30px] bg-[#0B0B14] border-[#1C1C24] border rounded-xl p-8">
        {title2 && <h2 class="text-3xl font-bold leading-tighter tracking-tighter mb-2 font-heading mx-auto" set:html={title2} />}
        {subtitle2 && <h3 class="mb-2 py-2 text-base font-medium" set:html={subtitle2} />}
        {
          items2 && (
            <div class="space-y-6">
              {items2.map(({ description2, icon }) => (
                <div class="flex">
                  <div class="flex-shrink-0">
                    <div class="flex h-6 w-6 items-center justify-center bg-[#EC458D] rounded-full mt-2">
                      <Icon name={icon ? icon : 'tabler:check'} class="w-4 h-4" />
                    </div>
                  </div>
                  <div class="ml-4">
                    {description2 && <p class="mt-2 text-base font-medium text-muted" set:html={description2} />}
                  </div>
                </div>
              ))}
            </div>
          )
        }
      </div>

      <div>
        <slot />
      </div>

    </div>
  </div>
</section>