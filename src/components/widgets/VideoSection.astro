---
import { YouTube } from '@astro-community/astro-embed-youtube';

export interface Props {
  title?: string;
  content?: string;
  link?: string;
}
const {
  title = await Astro.slots.render('title'),
  content = await Astro.slots.render('title'),
  link = await Astro.slots.render('title'),
} = Astro.props;
---
<section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-6xl relative">
    <div class="w-96 h-96 rounded-full bg-gradient blur-3xl opacity-20 absolute top-1/2 -translate-y-1/2 -right-40 scale-150 -z-10 md:-right-80"></div>
    <div class="w-96 h-96 rounded-full bg-bluegradient blur-3xl opacity-20 absolute left-1 -bottom-60 scale-125 md:scale-150 md:-bottom-80 -z-10"></div>
    <div class="grid grid-cols-2 gap-16">
        <div>
            {title && <p class="mb-8 text-justify text-3xl md:text-4xl font-bold tracking-tight" set:html={title} />}
            {content && <p class="text-justify leading-5 text-muted" set:html={content} />}
        </div>
        <YouTube id={link} />
    </div>

</section>

