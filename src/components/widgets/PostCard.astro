---
export interface Props {
  title?: string;
  date?: string;
  tag?: string;
  image?: string;
  url?: string;
}
const {
  title = await Astro.slots.render('title'),
  date = await Astro.slots.render('date'),
  tag = await Astro.slots.render('tag'),
  image = await Astro.slots.render('image'),
  url = await Astro.slots.render('url'),
} = Astro.props;
---
            <article>
            <a href={url}>
            <div class="mt-6 pb-2 border-b border-textdark last:border-b-0 md:border-b-0 md:mt-0">
                <img class="w-full h-40 rounded-2xl object-cover md:aspect-video md:h-48" src={image} alt={title}>
                <div class="flex justify-between py-4 pb-2">
                    <p class="text-sm font-semibold tracking-wide text-transparent bg-clip-text bg-gradient-to-t from-purple-900 to-accent">{tag}</p>
                    <p class="text-sm text-muted tracking-wide leading-relaxed md:hidden">{date}</p>
                </div>
                <h2 class="font-black text-muted text-2xl leading-tight pb-3">{title}</h2>
                <div class="hidden md:flex flex-row items-center">
                    <p class="text-sm text-muted tracking-wide leading-relaxed whitespace-nowrap w-fit pr-8">{date}</p>
                    <hr class="w-full border-textdark">
                </div>
            </div>
            </a>
        </article>
