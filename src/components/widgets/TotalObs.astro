---
import DynamicNum from '~/components/widgets/DynamicNum.jsx'
import { Icon } from 'astro-icon';
---

<section class="flex flex-col text-center font-bold gap-2 my-4 md:text-left md:ml-16 md:my-8 md:w-fit md:mr-0">
    <h2 class="text-2xl md:text-3xl">Total Observations</h2>
    <div class="flex justify-center items-end gap-4 md:justify-start">
        <p class="md:text-xl">FX & Crypto</p>
        <div class="flex flex-row items-center">
            <button class="text-xs font-light tracking-widest pb-0.5">DETAILS</button>
            <Icon name='tabler:chevron-right'  class="w-5 h-5 pb-1" />
        </div>
    </div>
    <DynamicNum client:load />
</section>