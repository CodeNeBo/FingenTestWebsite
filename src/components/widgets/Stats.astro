---
interface Item {
  currency1W?: string;
  currency21W?: string;
  EDGE1W?: string;
  AW1W?: string;
  AL1W?: string;
  ACC1W?: string;
  LIKELIHOOD1W?: string;
  currency1M?: string;
  currency21M?: string;
  EDGE1M?: string;
  AW1M?: string;
  AL1M?: string;
  ACC1M?: string;
  LIKELIHOOD1M?: string;
  currency3M?: string;
  currency23M?: string;
  EDGE3M?: string;
  AW3M?: string;
  AL3M?: string;
  ACC3M?: string;
  LIKELIHOOD3M?: string;
  currency6M?: string;
  currency26M?: string;
  EDGE6M?: string;
  AW6M?: string;
  AL6M?: string;
  ACC6M?: string;
  LIKELIHOOD6M?: string;
  currency1Y?: string;
