---
import { Icon } from 'astro-icon';
interface Item {
  description?: string;
  value?: string;
  icon?: string;
  icon2?: string;
}
export interface Props {
  items: Array<Array<Item>>;
}
const {
  items = [],
} = Astro.props;
---

<section class="scroll-mt-16" id="Listing">
  <div class="px-4 py-16 mx-auto max-w-6xl lg:px-8 lg:py-20">
    <slot />
    <div class="max-w-md lg:max-w-lg px-7 border-2 border-[#4B4B63] rounded-lg py-3 items-center mx-auto">
      {
        items.map((subitems) => (
          <div class="">
            {subitems.map(({ description, icon, icon2, value }) => (
              <div class="flex flex-row">
                <div class="flex flex-row -space-x-2 items-center justify-center mr-1">
                  <div class="flex items-center justify-center">
                    {icon && <Icon name={icon} class="w-6 h-6" />}
                  </div>
                  <div class="flex items-center justify-center">
                    {icon2 && <Icon name={icon2} class="w-6 h-6" />}
                  </div>
                </div>
                  <div class="flex flex-row justify-between w-full">
                    <p class="text-lg" set:html={description} />
                    <p class="text-lg" set:html={value} />
                  </div>
              </div>
            ))}
          </div>
        ))
      }
    </div>
  </div>
</section>