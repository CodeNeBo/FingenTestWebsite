---
import Logo from '~/components/Logo.astro';
import { Icon } from 'astro-icon';
import ToggleMenu from '~/components/common/ToggleMenu.astro';
import { getHomePermalink } from '~/utils/permalinks';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface ActionLink extends Link {
  type?: string;
}

interface MenuLink extends Link {
  links?: Array<Link>;
}

export interface Props {
  links?: Array<MenuLink>;
  actions?: Array<ActionLink>;
  isSticky?: boolean;
  position?: string;
  socialLinks: Array<Link>;
}

const {
  links = [],
  isSticky = false,
  socialLinks = [],
} = Astro.props;

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<header
  class:list={[
    { sticky: isSticky, relative: !isSticky },
    'top-0 z-50 flex-none mx-auto w-full transition-all ease-in duration-100',
  ]}
  id="header"
>
  <div class="mx-auto w-full bg-primary md:flex md:justify-between md:px-36">
    <div class="w-full py-2.5 bg-secondary flex justify-center items-center md:hidden">
      <p class="text-black text-sm font-medium ">Swarm AI & One-Click Portfolio Trading</p>
    </div>

    <div class="p-6 flex justify-between items-center">
      <a class="mx-auto pl-6 flex justify-self-center items-center" href={getHomePermalink()}>
        <Logo />
      </a>
      <div class="flex items-center justify-center md:hidden">
        <ToggleMenu />
      </div>
    </div>

    <nav
      class="items-center w-full md:w-auto hidden md:flex h-[calc(100vh-72px)] md:h-auto overflow-y-auto md:overflow-visible md:px-5 relative"
      aria-label="Main navigation"
    >
      <ul class="flex flex-col mx-4 md:mx-0 mt-8 md:mt-0 md:flex-row md:self-center md:w-auto text-2xl font-black md:font-bold md:text-lg rounded-xl bg-[#0E0E17] md:bg-transparent border-2 border-[#1C1C24] md:border-transparent w-auto">
        {
          links.map(({ text, href, icon }) => (
            <li>
                <a
                  class={`font-lg text-[#A4A4A7] hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out target:text-white ${currentPath === "" ? "active" : ""}`}
                  href={href}
                >
                  {icon && <Icon name={icon} class="w-5 h-5 mr-4 md:mr-2" />}
                  {text}
                </a>
            </li>
          ))
        }
      </ul>

      <div class="flex items-center justify-center flex-col md:hidden absolute bottom-40 inset-x-0">
        <h2 class="text-xl font-bold tracking-tight sm:text-2xl">Follow Us</h2>
        {
          socialLinks?.length ? (
            <ul class="flex mb-4 md:order-1">
              {socialLinks.map(({ ariaLabel, href, text, icon }) => (
                <li>
                  <a
                    class="text-muted rounded-lg text-sm p-2.5 inline-flex items-center"
                    aria-label={ariaLabel}
                    href={href}
                  >
                    {icon && <Icon name={icon} class="w-5 h-5" />}
                    <Fragment set:html={text} />
                  </a>
                </li>
              ))}
            </ul>
          ) : (
            ''
          )
        }
      </div>
    </nav>
  </div>
</header>
