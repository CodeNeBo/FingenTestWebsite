---
interface Item {
  currency1?: string;
  currency2?: string;
}
export interface Props {
  items: Array<Array<Item>>;
}
const {
  items = [],
} = Astro.props;
---

<section class="w-full px-4 md:px-0" id="currency">
    <div>
        {
        items.map((subitems) => (
            <div class="grid w-full gap-2 mb-2 grid-cols-2">
                {subitems.map(({ currency1, currency2 }) => (
                    <div class="text-sm border rounded py-1 px-2 bg-[#0B0B14] border-[#1C1C24] flex flex-row justify-center">
                        <p  set:html={currency1} />
                        <p class="mx-1">â€¢</p>
                        <p  set:html={currency2} />
                    </div>
                ))}
            </div>
        ))
        }
  </div>
</section>