---
import { Icon } from 'astro-icon';
interface Item {
  subtitle?: string;
  description: string;
  icon?: string;
}
export interface Props {
  title?: string;
  title2?: string;
  items: Array<Array<Item>>;
}
const {
  title = await Astro.slots.render('title'),
  title2 = await Astro.slots.render('title2'),
  items = [],
} = Astro.props;
---

<section class="scroll-mt-16" id="features">
  <div class="px-4 py-16 mx-auto max-w-6xl lg:px-8 lg:py-20">
    {
      (title ) && (
        <div class="mb-10 md:mx-auto text-center md:mb-12 max-w-3xl">
          {title && (
            <h2
              class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading"
              set:html={title}
            />
          )}

        </div>
      )
    }
    {
      (title2 ) && (
        <div class="mb-8 md:mx-auto text-center max-w-3xl">
          {title2 && (
            <h2
              class="text-2xl md:text-3xl font-bold leading-tighter tracking-tighter mb-4 font-heading"
              set:html={title2}
            />
          )}
        </div>
      )
    }
    <div class="grid mx-auto space-y-6 md:grid-cols-2 md:space-y-0">
      {
        items.map((subitems) => (
          <div class="space-y-8 sm:px-8">
            {subitems.map(({ subtitle, description, icon }) => (
              <div class="flex flex-row max-w-md">
                <div class="mb-4 mr-4">
                  <div class="flex h-6 w-6 items-center justify-center bg-[#EC458D] rounded-full mt-2">
                    <Icon name={icon ? icon : 'tabler:check'} class="w-4 h-4" />
                  </div>
                </div>
                <div>
                  <p class="mb-2 text-xl font-bold" set:html={subtitle}/>
                  <p class="text-muted text-justify dark:text-slate-400" set:html={description} />
                </div>
              </div>
            ))}
          </div>
        ))
      }
    </div>
  </div>
</section>