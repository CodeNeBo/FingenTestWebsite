---
export interface Props {
  label?: string;
  class?: string;
}

const {
  label = 'Toggle Tabs',
  class:
    className = 'py-2 w-40 h-12 inline-flex items-center justify-center rounded-l-lg last:rounded-r-lg last:rounded-l-none bg-[#05050F] border border-[#27272F] active:bg-[#e6e6e7] active:text-primary active:border-none ',
} = Astro.props;
---

<div class="flex flex-row w-full justify-center h-16 items-center z-[999]">
    <button type="button" id="tab1" class={className} aria-label={label} data-aw-toggle-tab>Trade Now</button>
    <button type="button" id="tab2" class={className} aria-label={label} data-aw-toggle-tab>Trading History</button>
</div>

<script>
  const tab1 = document.getElementById('tab1');
  const tab2 = document.getElementById('tab2');
  tab1.classList.add('bg-white');
  tab1.classList.add('text-primary');

  tab1.addEventListener('click', function() {
  if (tab1.classList.contains('active')) {
    return;
  }
  const activeButton = document.querySelector('[data-aw-toggle-tab].active');
  if (activeButton) {
    activeButton.classList.remove('active');
  }
  tab1.classList.add('active');

  const tradeNowContent = document.getElementById('TradeNow');
  const tradeHistoryContent = document.getElementById('TradeHistory');

  tab2.classList.remove('bg-white');
  tab2.classList.remove('text-primary');
  tab1.classList.add('bg-white');
  tab1.classList.add('text-primary');
  tradeNowContent.classList.remove('hidden');
  tradeHistoryContent.classList.add('hidden');
  });

  tab2.addEventListener('click', function() {
  if (tab2.classList.contains('active')) {
    return;
  }
  const activeButton = document.querySelector('[data-aw-toggle-tab].active');
  if (activeButton) {
    activeButton.classList.remove('active');
  }
  tab2.classList.add('active');

  const tradeNowContent = document.getElementById('TradeNow');
  const tradeHistoryContent = document.getElementById('TradeHistory');

  tab1.classList.remove('bg-white');
  tab1.classList.remove('text-primary');
  tab2.classList.add('bg-white');
  tab2.classList.add('text-primary');
  tradeNowContent.classList.add('hidden');
  tradeHistoryContent.classList.remove('hidden');
  });
</script>