---

export interface Props {
  text?: string;
}

const {
    text = await Astro.slots.render('text'),
} = Astro.props;
---

<section>
    <div class="flex flex-col mx-6">
        {
            text && (
              <p
                class="text-base md:ml-[50%] md:mr-[28%] font-normal leading-tighter tracking-tighter mb-2 font-heading dark:text-gray-200"
                set:html={text}
              />
            )
        }

    </div>
</section>