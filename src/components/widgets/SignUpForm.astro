---
import { Image } from "astro:assets";
import { Icon } from 'astro-icon';
import SignUpLines from "~/assets/images/SignUpLines.png"
import EmailModal from '~/components/widgets/EmailModal.astro';
---

<section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-6xl">
    <div class="w-full rounded-[32px] md:rounded-[64px] bg-gradient-to-br from-bluegradient to-gradient p-0.5 -z-40">
        <div class="py-16 md:py-24 flex-col justify-center rounded-[30px] md:rounded-[64px] bg-primary relative overflow-clip z-10">
            <h1 class="text-5xl md:text-6xl font-bold text-center pb-6 z-40">Unlock the power <br>of FinGen</h1>
            <p class="font-main font-normal text-xl text-center mx-8 md:mx-32 z-40">Signup for free daily crypto market research & predictions.<br>Weâ€™ll help you trade & invest better from the get-go.</p>
            <div class="w-full grid place-content-center z-40 pt-8 md:pt-12">                
                <EmailModal />
            </div>
            <Image alt={"Abstruct lines"} src={SignUpLines} class="absolute w-full h-full top-0 left-0 scale-125 -z-10" />
            <div class="absolute bg-accent w-96 aspect-square rounded-full blur-3xl opacity-20 -bottom-16 -left-36 -z-20"></div>
            <div class="absolute bg-gradient w-96 aspect-square rounded-full blur-3xl opacity-15 -top-16 -right-16 -z-20"></div>
            <div class="absolute bg-bluegradient w-96 aspect-square rounded-full blur-3xl opacity-30 right-32 -z-20"></div>
        </div>
    </div>
</section>


