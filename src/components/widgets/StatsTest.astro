      dataText.forEach(pairData => {
        const [pairs, categoryData] = pairData.split(' - ');
        const lineDiv = document.createElement('div');
        lineDiv.classList.add('data-line' , 'inline-flex', 'justify-between', 'w-full' , 'even:bg-[#26273B]', 'py-3', 'px-4');
