      const lineDiv = document.createElement('div');
      lineDiv.classList.add('data-line' , 'inline-flex', 'justify-between');
      lineDiv.innerHTML = `
        <p>${dataText}</p>
      `;
      dataContainer.appendChild(lineDiv);
    }
